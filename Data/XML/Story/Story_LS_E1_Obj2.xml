<?xml version="1.0" ?>
<Story>
        <!-- Setup -->

        <Event Name="LS_E1_O2_Begin">
                <Event_Type>STORY_ELAPSED</Event_Type>
                <Event_Param1>1</Event_Param1>
        </Event>

        <Event Name="LS_E1_O2_Begin_Autoresolve_Off">
                <Event_Type>STORY_TRIGGER</Event_Type>
                <Reward_Type>HIDE_AUTORESOLVE</Reward_Type>
                <Prereq>LS_E1_O2_Begin</Prereq>
        </Event>

        <Event Name="LS_E1_O2_Prevent_Retreat">
                <Event_Type>STORY_TRIGGER</Event_Type>
                <Reward_Type>DISABLE_RETREAT</Reward_Type>
                <Reward_Param1>Dark_Side</Reward_Param1>
                <Reward_Param2>1</Reward_Param2>
                <Prereq>LS_E1_O2_Begin</Prereq>
        </Event>

        <Event Name="LS_E1_O2_Win_Flag_Set">
                <Event_Type>STORY_TRIGGER</Event_Type>
                <Reward_Type>SET_FLAG</Reward_Type>
                <Reward_Param1>LS_E1_O2_Win</Reward_Param1>
                <Reward_Param2>0</Reward_Param2>
                <Prereq>LS_E1_O2_Begin</Prereq>
        </Event>

        <Event Name="LS_E1_O2_Prevent_Victory">
                <Event_Type>STORY_TRIGGER</Event_Type>
                <Reward_Type>ENABLE_VICTORY</Reward_Type>
                <Reward_Param1>Light_Side</Reward_Param1>
                <Reward_Param2>0</Reward_Param2>
                <Prereq>LS_E1_O2_Begin</Prereq>
        </Event>

